{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["*.ts", "test"],
  "exclude": ["node_modules", "benchmark", "build", "public", "dist", "tmp", "temp", "packages"]
}
